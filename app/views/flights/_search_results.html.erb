<% unless @flights.nil? %>
  <% if @flights.length > 0 %>
    <% @flights.each do |flight| %>
      <%= link_to new_booking_path(id: flight.id, passengers: params[:passengers]) do %>
        <%= render partial: 'flight_card', locals: { flight: flight } %>
      <% end %>
    <% end %>
  <% else %>
    <p>No results found.</p>
  <% end %>
<% end %>
